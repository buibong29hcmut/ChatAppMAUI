<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MaUI.Controls.MessageControl"
             xmlns:sfu="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core">
    <ContentPage.Content>
        <Grid RowDefinitions="auto, auto" IsVisible="{Binding IsUser}">
            <Grid ColumnDefinitions="100, *" IsVisible="true">
                <!--<Label Text="{Binding UserName}"/>-->
                <Frame Margin="0,5,0,5"  CornerRadius="15"
                                       Grid.Column="1"
                                       HorizontalOptions="End"
                                       HasShadow="True"     
                                       BackgroundColor="#587cec"
                                       Padding="3"
                                       MinimumWidthRequest="20">
                    <Frame.GestureRecognizers>
                        <DragGestureRecognizer/>
                    </Frame.GestureRecognizers>
                <Label Text="{Binding Message}"
                                           Margin="10"
                                           TextColor="White"
                                           LineBreakMode="WordWrap"/>
                </Frame>
            </Grid>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
